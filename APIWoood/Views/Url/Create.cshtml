@model APIWoood.Logic.Models.Url

@{
    ViewBag.Title = "Create Url";
}

<div class="container">

    <h2>Create Url</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Url</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group form-check">
            @Html.CheckBoxFor(model => model.ShowInStatistics, new { htmlAttributes = new { @class = "form-check-input" } })
            <label class="form-check-label" for="ShowInStatistics">Tonen in statistieken</label>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>