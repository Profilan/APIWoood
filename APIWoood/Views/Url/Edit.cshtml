@model APIWoood.Logic.Models.Url

@{
    ViewBag.Title = "Edit Url";
}

<div class="container">
    <h2>Edit Url</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-horizontal">
            <h4>Url</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-row">
                <div class="col">
                    @Html.EditorFor(model => model.Hits, new { htmlAttributes = new { @class = "form-control", @placeholder = "Hits" } })
                    @Html.ValidationMessageFor(model => model.Hits, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    <a id="resetHitsButton" href="#" class="btn btn-secondary">Reset</a>
                </div>
            </div>

            <div class="form-group form-check">
                @Html.CheckBoxFor(model => model.ShowInStatistics, new { htmlAttributes = new { @class = "form-check-input" }})
                <label class="form-check-label" for="ShowInStatistics">Tonen in statistieken</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(function () {

            $("#resetHitsButton").click(function (e) {
                e.preventDefault();

                $("#Hits").val(0);
            });
           
        });
    </script>
}